{
  "name": "react-es6-babel-webpack-starter",
  "version": "1.0.0",
  "description": "starter react template project with react-router, browserHistory, es6 babel webpack and livereload",
  "author": "Maksim Kostromin",
  "license": "ISC",
  "main": "webpack.config.js",
  "scripts": {
    "ws": "ws",
    "webpack": "webpack",
    "livereload": "livereload",
    "build": "npm run webpack -- -p",
    "watch": "npm run webpack -- -w",
    "wp": "webpack-dev-server --content-base ./ -w",
    "dev": "npm-run-all --parallel livereload wp watch",
    "reload": "npm-run-all --parallel livereload ws watch",
    "start": "npm-run-all webpack reload",
    "serve": "npm-run-all build ws",
    "eslint": "eslint --debug ./src",
    "lintfix": "npm run eslint -- --fix",
    "test": "npm-run-all eslint webpack",
    "stop": "killall node &",
    "deploy:static": "surge -p dist/"
  },
  "pre-push": [
    "test"
  ],
  "local-web-server": {
    "directory": "./",
    "port": 3000,
    "forbid": [
      "*.json",
      "*.ts",
      "*.md",
      "*.yml",
      "*.babel.js",
      ".gitignore"
    ],
    "no-cache": true
  },
  "livereload": {
    "exclusions": [
      "*.git",
      "node_modules/**/*.*",
      ".gitignore",
      "*.json",
      "*.md"
    ]
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "react-html-attrs",
      "add-module-exports",
      "transform-class-properties",
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "react",
      "eslint-plugin-react"
    ],
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "xo",
      "stylelint"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "jsx-quotes": "warn",
      "react/prop-types": "warn",
      "react/no-unknown-property": "off",
      "no-empty": "error",
      "comma-dangle": "off",
      "semi": "off",
      "no-unused-vars": "warn",
      "object-curly-spacing": "warn",
      "max-len": [
        "error",
        120
      ],
      "max-params": [
        "error",
        3
      ],
      "indent": [
        "warn",
        2
      ],
      "linebreak-style": [
        "warn",
        "unix"
      ],
      "quotes": [
        "warn",
        "single"
      ]
    }
  },
  "dependencies": {
    "bootstrap": "3.3.6",
    "react": "15.1.0",
    "react-dom": "15.1.0",
    "react-router": "2.4.1"
  },
  "devDependencies": {
    "autoprefixer": "6.3.6",
    "babel": "6.5.2",
    "babel-core": "6.9.1",
    "babel-loader": "6.2.4",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-react-html-attrs": "2.0.0",
    "babel-plugin-transform-class-properties": "6.10.2",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.5.0",
    "copy-webpack-plugin": "3.0.1",
    "css-loader": "0.23.1",
    "cssnano": "3.7.1",
    "editorconfig": "0.13.2",
    "eslint": "2.13.1",
    "eslint-config-stylelint": "2.0.0",
    "eslint-config-xo": "0.15.2",
    "eslint-plugin-react": "5.2.2",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.9.0",
    "husky": "0.11.4",
    "livereload": "0.4.1",
    "local-web-server": "1.2.6",
    "npm-run-all": "2.2.0",
    "postcss-loader": "0.8.2",
    "pre-push": "0.1.1",
    "source-map-loader": "0.1.5",
    "style-loader": "0.13.1",
    "stylelint": "6.7.0",
    "surge": "0.18.0",
    "url-loader": "0.5.7",
    "webpack": "1.13.1",
    "webpack-dev-server": "1.14.1"
  },
  "tags": [
    "react",
    "react-router",
    "history",
    "hashHistory",
    "es6",
    "babel",
    "eslint",
    "livereload",
    "webpack"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daggerok/react-es6-babel-webpack-starter.git"
  },
  "keywords": [
    "react",
    "react-router",
    "browser",
    "hystory",
    "es6",
    "babel",
    "webpack"
  ],
  "bugs": {
    "url": "https://github.com/daggerok/react-es6-babel-webpack-starter/issues"
  },
  "homepage": "https://github.com/daggerok/react-es6-babel-webpack-starter#readme"
}
