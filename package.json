{
  "name": "react-webpack-starter",
  "version": "1.0.0",
  "description": "starter react template project with react-router, browserHistory, es6 babel webpack and livereload",
  "author": "Maksim Kostromin",
  "license": "ISC",
  "main": "webpack.config.js",
  "scripts": {
    "ino": "npm i --no-optional",
    "eslint": "npm run ino && eslint --debug ./src",
    "lintfix": "npm run ino && eslint --debug src --fix",
    "build": "npm run ino && npm run eslint && webpack -p",
    "serve": "npm run build && ws",
    "start": "npm run ino && webpack -w",
    "dev": "npm start & npm test",
    "test": "npm run ino && (livereload & webpack-dev-server --content base ./)"
  },
  "local-web-server": {
    "directory": "./",
    "port": 3000,
    "forbid": [
      "*.json",
      "*.ts",
      "*.md",
      "*.yml",
      "*.babel.js",
      ".gitignore"
    ],
    "no-cache": true
  },
  "livereload": {
    "exclusions": [
      "*.git",
      "node_modules/**/*.*",
      ".gitignore",
      "*.json",
      "*.md"
    ]
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "react-html-attrs",
      "add-module-exports",
      "transform-class-properties",
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "react",
      "eslint-plugin-react"
    ],
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "react/prop-types": "warn",
      "react/no-unknown-property": "off",
      "no-empty": "error",
      "no-unused-vars": "warn",
      "max-len": ["error", 120],
      "max-params": ["error", 3],
      "indent": ["error", 2],
      "linebreak-style": ["error","unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "never"]
    }
  },
  "dependencies": {
    "bootstrap": "3.3.6",
    "react": "0.14.7",
    "react-dom": "0.14.7",
    "react-router": "2.0.1"
  },
  "devDependencies": {
    "babel": "6.5.2",
    "babel-core": "6.7.2",
    "babel-loader": "6.2.4",
    "babel-plugin-add-module-exports": "0.1.2",
    "babel-plugin-react-html-attrs": "2.0.0",
    "babel-plugin-transform-class-properties": "6.6.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "css-loader": "0.23.1",
    "editorconfig": "0.13.2",
    "eslint": "2.4.0",
    "eslint-plugin-react": "4.2.3",
    "file-loader": "0.8.5",
    "livereload": "0.4.1",
    "local-web-server": "1.2.1",
    "style-loader": "0.13.0",
    "url-loader": "0.5.7",
    "webpack": "1.12.14",
    "webpack-dev-server": "1.14.1"
  },
  "tags": [
    "react",
    "react-router",
    "history",
    "hashHistory",
    "es6",
    "babel",
    "eslint",
    "livereload",
    "webpack"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daggerok/react-webpack-starter.git"
  },
  "keywords": [
    "react",
    "react-router",
    "browser",
    "hystory",
    "es6",
    "babel",
    "webpack"
  ],
  "bugs": {
    "url": "https://github.com/daggerok/react-webpack-starter/issues"
  },
  "homepage": "https://github.com/daggerok/react-webpack-starter#readme"
}
